{
  "name": "plotpoint",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:studio": "pnpm --filter @plotpoint/db db:studio"
  },
  "devDependencies": {
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.27.2"
    },
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  }
}
